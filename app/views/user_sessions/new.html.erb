<%= content_for(:title,'ログインページ') %>
<div class="form_container bg-white text-dark">
  <div class="form_box mx-3 my-3">
    <h3 class="mx-3 mt-4">ログイン画面</h3>
    <div class="form">
      <%= form_with url: login_path do |f| %>
        <div class="d-flex mr-5">
          <%= f.label :メールアドレス, class: "label text-center" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="d-flex my-5 mr-5">
          <%= f.label :パスワード, class: "label text-center" %>
          <%= f.text_field :password, class: "form-control" %>
        </div>  
        <%= f.submit "ログイン", class: "submit_button"%>
      <% end %>
    </div>
    <%= link_to "LINEでログイン", login_line_path(provider: "line"), class: "btn btn-success" %>

  </div>
</div>